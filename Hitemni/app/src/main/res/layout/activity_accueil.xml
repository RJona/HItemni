<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hitemni.Accueil">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgb_ecole"
        android:clickable="true"
        android:src="@drawable/hat"
        android:background="@android:color/transparent"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignBottom="@+id/imgb_favoris"
        android:layout_toStartOf="@+id/imgb_favoris" />

    <ImageButton
        android:layout_width="198dp"
        android:layout_height="148dp"
        android:id="@+id/imgb_favoris"
        android:clickable="true"
        android:src="@drawable/favorite_mini"
        android:background="@android:color/transparent"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgb_profil"
        android:clickable="true"
        android:src="@drawable/user"
        android:background="@android:color/transparent"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_below="@+id/imgb_favoris"
        android:layout_toEndOf="@+id/imgb_message"
        android:layout_marginStart="32dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgb_message"
        android:clickable="true"
        android:src="@drawable/message"
        android:background="@android:color/transparent"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_below="@+id/imgb_ecole"
        android:layout_alignStart="@+id/imgb_ecole" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgb_map"
        android:clickable="true"
        android:src="@drawable/map"
        android:background="@android:color/transparent"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_below="@+id/imgb_profil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

</RelativeLayout>
