<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hitemni.ExperiencePro">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Expérience Professionnelle"
        android:id="@+id/lbl_expPro"
        android:layout_row="1"
        android:layout_column="1" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:rowCount="8"
        android:columnCount="2"
        android:orientation="horizontal"
        android:id="@+id/gridLayout9"
        android:layout_below="@+id/lbl_expPro">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Années d&apos;expériences"
            android:id="@+id/lbl_nbxperience"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entreprise actuelle"
            android:id="@+id/lbl_entre"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:id="@+id/tb_entrepriseActuelle"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spécialité"
            android:id="@+id/lbl_spé"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:id="@+id/tb_specialite"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type de travail"
            android:id="@+id/lbl_typeTaf"
            android:layout_row="3"
            android:layout_column="0" />

        <EditText
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:id="@+id/tb_anneeExperience"
            android:layout_row="0"
            android:layout_column="1" />

        <EditText
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:id="@+id/tb_typeTaf"
            android:layout_row="3"
            android:layout_column="1" />

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        android:id="@+id/btn_no"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/btn_ok"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
