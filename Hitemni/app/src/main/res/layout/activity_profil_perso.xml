<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hitemni.ProfilPerso">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/GridLayout7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="66dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom "
                android:id="@+id/lbl_nom"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="27dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="top|left|bottom|center_vertical|right" />

            <EditText
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:id="@+id/tb_nom"
                android:layout_row="2"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prénom"
                android:id="@+id/lbl_prenom"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="27dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="top|left|bottom|center_vertical|right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Mes Données Perso"
                android:id="@+id/lbl_donnees_perso"
                android:layout_row="0"
                android:layout_column="1" />

            <EditText
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:id="@+id/tb_prenom"
                android:layout_row="3"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mail "
                android:id="@+id/lb_mail"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="27dp"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="top|left|bottom|center_vertical|right" />

            <EditText
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:id="@+id/tb_mail"
                android:layout_row="4"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mot de passe"
                android:id="@+id/lbl_mdp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="27dp"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="top|left|bottom|center_vertical|right" />

            <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/tb_mdp"
                android:layout_row="5"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:id="@+id/lbl_age"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="27dp"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_gravity="top|left|bottom|center_vertical|right" />

            <EditText
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:id="@+id/tb_age"
                android:layout_row="6"
                android:layout_column="1" />

            <TextView
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="Sexe"
                android:id="@+id/lbl_sexe"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="27dp"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_gravity="top|left|bottom|center_vertical|right" />

            <RadioGroup
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="1"
                android:id="@+id/rb_groupe_Sexe"
                android:weightSum="1">

                <RadioButton
                    android:layout_width="38dp"
                    android:layout_height="18dp"
                    android:text="F"
                    android:id="@+id/rb_Femme"
                    android:checked="false"
                    android:layout_weight="0.97" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="M"
                    android:id="@+id/br_Homme"
                    android:checked="false"
                    android:layout_weight="1.83" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promo"
                android:id="@+id/lbl_promo"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="27dp"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_gravity="top|left|bottom|center_vertical|right" />

            <EditText
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:id="@+id/tb_promo"
                android:layout_row="8"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="27dp"
                android:layout_row="11"
                android:layout_column="0" />

        </GridLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        android:id="@+id/btn_no"
        android:layout_alignBottom="@+id/scrollView6"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="59dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/btn_ok"
        android:layout_alignTop="@+id/btn_no"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
